---
import { ArrowLeft, ArrowRight, BookOpen } from "@lucide/astro";
import type { CollectionEntry } from "astro:content";
import Badge from "../../../components/ui/Badge.astro";
import Button from "../../../components/ui/Button.astro";
import Container from "../../../components/ui/Container.astro";
import PostCard from "../../../components/ui/PostCard.astro";
import Section from "../../../components/ui/Section.astro";
import Layout from "../../../layouts/Layout.astro";
import { getBlogPostsByCategory } from "../../../lib/blog";
import { getAllCategories } from "../../../lib/taxonomy";

export async function getStaticPaths() {
  const categories = await getAllCategories();
  
  return Promise.all(
    categories.map(async (category) => {
      const posts = await getBlogPostsByCategory(category.name);
      
      return {
        params: { category: category.slug },
        props: { 
          category: category.name,
          categorySlug: category.slug,
          posts,
          postCount: posts.length 
        },
      };
    })
  );
}

interface Props {
  category: string;
  categorySlug: string;
  posts: CollectionEntry<'blog'>[];
  postCount: number;
}

const { category, categorySlug, posts, postCount } = Astro.props;

const title = `${category} Articles`;
const description = `Browse all ${category.toLowerCase()} articles and guides`;
---

<Layout title={title} description={description}>
  
  <!-- Hero Section -->
  <Section size="md" background="dark" pattern={{type: 'grid', visibility: 'light'}}>
    <Container>
      <div>
        <!-- Back Link -->
        <a 
          href="/blog"
          class="inline-flex items-center gap-2 text-sm font-medium text-blue-200 hover:text-white mb-6"
        >
          <ArrowLeft class="w-4 h-4" />
          Back to Blog
        </a>

        <!-- Badge and Title -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <div>
            <Badge variant="white" class="mb-4">
              <BookOpen class="w-4 h-4" />
              <span>Category</span>
            </Badge>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-3">
              {category}
            </h1>
            <p class="text-lg md:text-xl text-slate-300">
              {postCount} {postCount === 1 ? 'article' : 'articles'} in this category
            </p>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Posts Section -->
  {posts.length > 0 ? (
    <Section size="xl" background="white">
      <Container>
        <!-- Posts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>
      </Container>
    </Section>
  ) : (
    <Section size="lg" background="white">
      <Container>
        <div class="text-center max-w-2xl mx-auto">
          <div class="bg-slate-100 rounded-full w-24 h-24 flex items-center justify-center mx-auto mb-6">
            <BookOpen class="w-12 h-12 text-slate-400" />
          </div>
          <h2 class="text-2xl font-bold text-slate-900 mb-4">No Articles Found</h2>
          <p class="text-slate-600 mb-8">
            We haven't published any articles in this category yet. Check back soon!
          </p>
          <Button variant="primary" href="/blog">
            View All Articles
          </Button>
        </div>
      </Container>
    </Section>
  )}

  <!-- Browse Other Categories -->
  <Section size="lg" background="slate" pattern={{type: 'dots', visibility: 'light'}}>
    <Container>
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-slate-900 mb-4">
          Browse Other Categories
        </h2>
        <p class="text-slate-600 mb-8">
          Explore more articles and guides across different topics
        </p>
        <Button variant="secondary" href="/blog" icon={ArrowRight}>
          View All Articles
        </Button>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section size="xl" background="dark" pattern={{type: 'circuit'}}>
    <Container>
      <div class="max-w-4xl mx-auto text-center py-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
          Need Help With Your Website?
        </h2>
        <p class="text-lg md:text-xl text-blue-100 mb-10 max-w-2xl mx-auto">
          Our team is ready to help you succeed online. Let's discuss your project and create something amazing together.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button 
            href="/contact"
            icon={ArrowRight}
          >
            Get Started
          </Button>
          <Button 
            variant="outline"
            href="/services">
            Our Services
          </Button>
        </div>
        <p class="text-sm text-blue-200 mt-6">
          Free consultation available
        </p>
      </div>
    </Container>
  </Section>

</Layout>