---
import { BookOpen } from "@lucide/astro";
import type { GetStaticPathsOptions, Page } from "astro";
import { type CollectionEntry } from "astro:content";
import CTADivided from "../../components/CTADivided.astro";
import Badge from "../../components/ui/Badge.astro";
import Container from "../../components/ui/Container.astro";
import Pagination from '../../components/ui/Pagination.astro';
import PostCard from "../../components/ui/PostCard.astro";
import Section from "../../components/ui/Section.astro";
import Layout from "../../layouts/Layout.astro";
import { getAllBlogPosts } from '../../lib/blog';
import { siteConfig } from '../../site.config';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getAllBlogPosts();

  return paginate(allPosts, { pageSize: siteConfig.pagination.itemsPerPage || 9 });
}

type Props = { page: Page<CollectionEntry<'blog'>> };

const { page } = Astro.props;
const posts = page.data;

const title = page.currentPage === 1 ? 'Blog' : `Blog - Page ${page.currentPage}`;
---

<Layout
  title={title}
  description="Web development guides, tutorials, and insights to help small businesses succeed online.">
  
  <!-- Hero Section -->
  <Section size="md" background="dark" pattern={{type: 'grid', visibility: 'light'}}>
    <Container>
      <div>
        <!-- Badge and Title -->
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
          <div>
            <Badge variant="white" class="mb-4">
              <BookOpen class="w-4 h-4" />
              <span>Blog</span>
            </Badge>
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-3">
              Insights & Guides
            </h1>
            <p class="text-lg md:text-xl text-slate-300 max-w-2xl">
              Web development tips, design insights, and practical advice for growing your business online.
            </p>
          </div>
          
          <!-- Quick Stats -->
          <div class="flex md:flex-col gap-6 md:gap-3 md:text-right">
            <div>
              <div class="text-3xl font-bold text-white">{page.total}+</div>
              <div class="text-xs text-blue-300">Articles</div>
            </div>
            <div>
              <div class="text-3xl font-bold text-white">Free</div>
              <div class="text-xs text-blue-300">Resources</div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Blog Posts Section -->
  {posts.length > 0 && (
    <Section background="white">
      <Container>
        <!-- Section Header -->
        <div class="max-w-3xl mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
            {page.currentPage === 1 ? 'Latest Articles' : `Articles - Page ${page.currentPage}`}
          </h2>
          <p class="text-lg text-slate-600">
            Practical tips and insights to help you succeed with your website and online presence.
          </p>
        </div>

        <!-- Posts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>

        <!-- Pagination -->
        {page.lastPage > 1 && (
          <Pagination page={page} />
        )}
      </Container>
    </Section>
  )}

  <!-- CTA Section -->
  <Section size="xl" background="slate" pattern={{type: 'circuit', visibility: 'light'}}>
    <Container size="wide">
      <CTADivided 
        title="Ready to Start Your Project?" 
        body="Let's create something amazing together. Schedule a free consultation to discuss your goals and how we can help your business grow online." 
        primaryButtonText="Get Started Today" 
        primaryButtonUrl="/services/request" 
        secondaryButtonText="View Our Services" 
        secondaryButtonUrl="/services">
          <span class="font-semibold text-slate-900">
            Free consultation</span> â€¢ Flexible payment plans available
      </CTADivided>
    </Container>
  </Section>
</Layout>