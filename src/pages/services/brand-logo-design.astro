          class="bg-white rounded-2xl p-8 shadow-sm border-2 border-blue-600 relative">
          <div class="absolute -top-4 left-1/2 -translate-x-1/2">
            <Badge class="shadow-md bg-blue-600 text-white">Most Popular</Badge>
          </div>

          <div
            class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mb-6">
            <Palette class="w-8 h-8 text-blue-600" />
          </div>

