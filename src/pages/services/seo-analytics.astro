import {
  ArrowRight,
  Building2,
  ChartBar,
  ChartColumn,
  Check,
  CircleCheck,
  Clock,
  FileText,
  Lightbulb,
  PencilRuler,
  Rocket,
  Search,
  Settings,
  Shield,
  Target,
  TrendingUp,
  Zap,
} from "@lucide/astro";
import { Image } from "astro:assets";
import Accordion from "../../components/ui/Accordion.astro";
import Badge from "../../components/ui/Badge.astro";
import Button from "../../components/ui/Button.astro";
import Container from "../../components/ui/Container.astro";
import Section from "../../components/ui/Section.astro";
import Layout from "../../layouts/Layout.astro";

import heroImage from "../../assets/images/analytics-dashboard-on-laptop.jpg";

// Import your hero image

// FAQ data
const faqs = [
  {
    question: "What's the difference between an SEO audit and ongoing SEO?",
    answer:
      "An SEO audit is a one-time deep dive into your website to identify issues and opportunities. I'll give you a prioritized list of improvements you can make. Ongoing SEO involves continuous content creation, link building, and monthly optimization - which I don't offer. Instead, I can recommend tools like Blaze.AI if you want to manage content yourself.",
  },
  {
    question: "Do I need to hire you to fix the issues you find?",
    answer:
      "Not at all! The audit report includes clear, actionable instructions so you (or your team) can make the changes yourself. However, if you'd prefer me to handle the implementation, we can discuss that as a separate project with clear pricing.",
  },
  {
    question: "How is this different from an SEO agency?",
    answer:
      "SEO agencies typically charge $1,000-5,000+/month for ongoing services like content creation, link building, and monthly reporting. I focus on the technical foundation and one-time improvements that make the biggest impact. It's perfect for small businesses that need expert guidance without the agency price tag.",
  },
  {
    question: "Will you write blog posts or manage my social media?",
    answer:
      "No - I focus on technical SEO and analytics, not content marketing or social media management. However, I can create digital assets like landing pages, ad graphics, and other one-off design work when you need them.",
  },
  {
    question: "What if I don't understand Google Analytics?",
    answer:
      "That's exactly why I offer the Analytics Setup & Training service! I'll not only set everything up correctly but also teach you what the numbers mean and which metrics actually matter for your business. You'll get recordings and documentation to reference later.",
  },
  {
    question: "How long does an SEO audit take?",
    answer:
      "Most audits are completed within 5-7 business days. You'll receive a detailed PDF report with screenshots, explanations, and prioritized recommendations ranked by impact and difficulty.",
  },
  {
    question: "Can you help with my Google Ads or Facebook Ads?",
    answer:
      "Currently, I don't manage advertising campaigns. My focus is on organic search (SEO) and analytics. However, I can create landing pages and ad graphics for your campaigns as one-off projects.",
  },
  {
    question: "What if my website needs another audit in 6 months?",
    answer:
      "No problem! Just reach out when you're ready. Many clients come back for a follow-up audit after they've implemented changes, or when they've made significant updates to their site. There's no ongoing commitment required.",
  },
];
---

<Layout
  title="SEO & Analytics Services"
  description="Get expert SEO audits and analytics setup without the agency price tag. Perfect for small businesses who want to improve their Google visibility and understand their data.">
  <!-- Hero Section -->
  <Section
    size="xl"
    background="dark"
    pattern={{ type: "grid", visibility: "light" }}>
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 items-center py-12">
        <!-- Left Column: Content -->
        <div>
          <Badge variant="white" class="mb-6 shadow-lg">
            <Search class="w-4 h-4" />
            <span>SEO & Analytics</span>
          </Badge>

          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            SEO & Analytics That Make Sense
          </h1>

          <p class="text-xl text-blue-100 leading-relaxed mb-8">
            Stop guessing if your website is working. Get expert SEO
            recommendations and analytics insights you can actually understand
            and use.
          </p>

          <!-- Key Benefits -->
          <ul class="space-y-3 mb-8">
            <li class="flex items-start gap-3">
              <Check class="w-6 h-6 text-blue-400 shrink-0 mt-0.5" />
              <span class="text-slate-200"
                >Expert review of what's holding your site back</span
              >
            </li>
            <li class="flex items-start gap-3">
              <Check class="w-6 h-6 text-blue-400 shrink-0 mt-0.5" />
              <span class="text-slate-200"
                >Clear, actionable steps to improve Google visibility</span
              >
            </li>
            <li class="flex items-start gap-3">
              <Check class="w-6 h-6 text-blue-400 shrink-0 mt-0.5" />
              <span class="text-slate-200"
                >Analytics setup that shows what's helping your business</span
              >
            </li>
            <li class="flex items-start gap-3">
              <Check class="w-6 h-6 text-blue-400 shrink-0 mt-0.5" />
              <span class="text-slate-200"
                >No confusing jargon or expensive monthly retainers</span
              >
            </li>
          </ul>

          <div class="flex flex-wrap gap-4">
            <Button
              icon={ArrowRight}
              href="/services/request?service=seo-analytics&addon=site-audit"
              >Get Your Audit</Button
            >
            <Button variant="outline" href="#services">See Services</Button>
          </div>
        </div>

        <!-- Right Column: Image -->
        <div class="relative">
          <div
            class="rounded-2xl overflow-hidden shadow-2xl bg-slate-700 aspect-4/3 flex items-center justify-center">
            <Image
              src={heroImage}
              alt="Laptop on table with a analytics dashboard web page open"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              widths={[400, 600, 800]}
              sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              quality={80}
            />
          </div>

          <!-- Floating Stats Cards -->
          <div
            class="absolute -bottom-6 -left-6 bg-white rounded-xl shadow-lg p-4 border border-slate-200">
            <div class="flex items-center gap-2">
              <TrendingUp class="w-5 h-5 text-green-600" />
              <div>
                <div class="text-2xl font-bold text-slate-900">+150%</div>
                <div class="text-xs text-slate-600">Avg. Traffic Increase</div>
              </div>
            </div>
          </div>

          <div
            class="absolute -top-6 -right-6 bg-white rounded-xl shadow-lg p-4 border border-slate-200">
            <div class="flex items-center gap-2">
              <Search class="w-5 h-5 text-blue-600" />
              <div>
                <div class="text-2xl font-bold text-slate-900">Top 3</div>
                <div class="text-xs text-slate-600">Google Rankings</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Problem/Solution Section -->
  <Section background="white">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          Your Website Looks Great, But Is Anyone Finding It?
        </h2>
        <p class="text-lg text-slate-600">
          You invested in a website, but if it's not showing up on Google or you
          don't understand your analytics, you're missing opportunities.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Problem 1 -->
        <div class="text-center">
          <div
            class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
            <Search class="w-8 h-8 text-blue-600" />
          </div>
          <h3 class="text-lg font-bold text-slate-900 mb-2">
            Not Showing Up on Google
          </h3>
          <p class="text-slate-600">
