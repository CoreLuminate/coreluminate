        <!-- Item 4 -->
        <div class="bg-slate-50 rounded-xl p-6">
          <div
            class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
            <Target class="w-6 h-6 text-blue-600" />
          </div>
          <h3 class="text-lg font-bold text-slate-900 mb-2">
