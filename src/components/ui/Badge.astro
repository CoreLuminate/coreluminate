---
interface Props {
  variant?:
    | "blue"
    | "white"
    | "slate"
    | "dark"
    | "purple"
    | "green"
    | "orange"
    | "yellow"
    | "pink"
    | "blur";
  size?: "sm" | "md" | "lg";
  class?: string;
}

const { variant = "blue", size = "md", class: className = "" } = Astro.props;

const sizeStyles = {
  sm: "px-2 py-1 text-xs",
  md: "px-3 py-1.5 text-xs",
  lg: "px-4 py-2 text-sm",
};

const variantStyles = {
  blue: "bg-blue-50 ring-blue-100 text-blue-800",
  white: "bg-white ring-blue-100 text-blue-800",
  slate: "bg-slate-100 ring-slate-200 text-slate-700",
  dark: "bg-blue-600 text-white ring-blue-700",
  purple: "bg-violet-50 text-violet-700 ring-violet-100",
  green: "bg-teal-50 text-teal-700 ring-teal-100",
  orange: "bg-orange-50 text-orange-700 ring-orange-100",
  yellow: "bg-yellow-50 text-yellow-700 ring-yellow-100",
  pink: "bg-fuchsia-50 text-fuchsia-700 ring-fuchsia-100",
  blur: "text-white bg-white/10 backdrop-blur-sm ring-white/20",
};
---

<div
  class={`inline-flex ring-1 items-center gap-2 shadow-xs rounded-full font-medium ${variantStyles[variant]} ${sizeStyles[size]} ${className}`}>
  <slot />
</div>
