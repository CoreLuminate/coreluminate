---
interface Props {
  title: string;
  body: string;
  primaryButtonText: string;
  primaryButtonUrl: string;
  secondaryButtonText: string;
  secondaryButtonUrl: string;
  class?: string;
}
const {
  title = "Ready to Launch Digital Presence?",
  body = "Tell us about your project, and let's get started on building a website that drives results.",
  primaryButtonText = "Get Started Now",
  primaryButtonUrl = "/contact",
  secondaryButtonText = "Learn More",
  secondaryButtonUrl = "/about",
  class: className = "",
  ...rest
} = Astro.props;
import Button from "./ui/Button.astro";
const hasSlot = Astro.slots.default !== undefined;
---

<div class="flex flex-col">
  <!-- Card Container -->
  <div
    class="bg-white rounded-2xl p-6 md:p-8 shadow-md ring-1 ring-slate-200 text-center">
    <!-- Heading -->
    <h2 class="text-2xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
      {title}
    </h2>

    <!-- Description -->
    <p class="text-lg md:text-xl text-slate-600 mb-8 max-w-2xl mx-auto">
      {body}
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-wrap justify-center gap-4">
      <Button variant="primary" href={primaryButtonUrl}>
        {primaryButtonText}
      </Button>
      <Button variant="secondary" href={secondaryButtonUrl}>
        {secondaryButtonText}
      </Button>
    </div>

    {
      hasSlot && (
        <div class="mt-8 pt-8 border-t border-slate-200">
          <p class="text-sm text-slate-600">
            <slot />
          </p>
        </div>
      )
    }
  </div>
</div>
