---
import { Mail, MapPin, Phone } from "@lucide/astro";
import Logo from "../assets/coreluminate.svg";
import Container from "./ui/Container.astro";

const footerLinks = {
  services: {
    title: "Services",
    links: [
      {
        label: "Website Design & Development",
        href: "/services/website-design-development",
      },
      { label: "SEO & Analytics", href: "/services/seo-analytics" },
      { label: "Brand & Logo Design", href: "/services/brand-logo-design" },
      { label: "E-commerce Solutions", href: "/services/e-commerce-solutions" },
      {
        label: "Business Systems Setup",
        href: "/services/business-systems-setup",
      },
      {
        label: "Website Updates & Add-Ons",
        href: "/services/website-updates",
      },
    ],
  },
  solutions: {
    title: "Solutions",
    links: [
      {
        label: "Complete Digital Launch",
        href: "/solutions/complete-digital-launch",
      },
      {
        label: "Website Refresh & Modernization",
        href: "/solutions/website-refresh-modernization",
      },
      {
        label: "Platform Migration",
        href: "/solutions/platform-migration",
      },
      {
        label: "Quick Launch Website",
        href: "/solutions/quick-launch-website",
      },
      {
        label: "DIY Website with Expert Support",
        href: "/solutions/diy-website-support",
      },
    ],
  },
  company: {
    title: "Company",
    links: [
      { label: "About Us", href: "/about" },
      { label: "Our Work", href: "/work" },
      { label: "Request Service", href: "/services/request" },
      { label: "Blog", href: "/blog" },
      { label: "Contact", href: "/contact" },
    ],
  },
  resources: {
    title: "Resources",
    links: [
      { label: "Getting Started", href: "/resources/getting-started" },
      { label: "FAQ", href: "/faq" },
      { label: "Support", href: "/support" },
      { label: "Documentation", href: "/docs" },
    ],
  },
};

const legalLinks = [
  { label: "Privacy Policy", href: "/privacy-policy" },
  { label: "Cookie Policy", href: "/cookie-policy" },
];
---

<footer class="bg-slate-900 text-slate-200">
  <Container>
    <!-- Main Footer Content -->
    <div class="py-12 flex flex-col md:flex-row gap-12">
      <!-- Brand Column (spans 2 columns on large screens) -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-4">
          <Logo class="w-10 h-10" />
          <span class="text-2xl text-white"
            >Core<span class="font-bold">Luminate</span></span
          >
        </a>
        <p class="text-slate-200 mb-6 max-w-sm">
          Helping small businesses shine online with professional web design,
          development, and digital solutions.
        </p>

        <!-- Contact Info -->
        <div class="space-y-3">
          <a
            href="mailto:hello@coreluminate.com"
            class="flex items-center gap-2 hover:text-blue-400 transition-colors">
            <Mail class="w-4 h-4" />
            <span class="text-sm">hello@coreluminate.com</span>
          </a>
          <a
            href="tel:+1234567890"
            class="flex items-center gap-2 hover:text-blue-400 transition-colors">
            <Phone class="w-4 h-4" />
            <span class="text-sm">(480) 818-5759</span>
          </a>
          <div class="flex items-center gap-2">
            <MapPin class="w-4 h-4" />
            <span class="text-sm">Gilbert, AZ</span>
          </div>
        </div>
      </div>

      <!-- Navigation Columns -->
      <div class="w-full">
        <div class="flex flex-col md:flex-row justify-end gap-12">
          <!-- Services Column -->
          <div>
            <h3 class="text-white font-semibold mb-4">
              {footerLinks.services.title}
            </h3>
            <ul class="space-y-2">
              {
                footerLinks.services.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm hover:text-blue-400 transition-colors">
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Solutions Column -->
          <div>
            <h3 class="text-white font-semibold mb-4">
              {footerLinks.solutions.title}
            </h3>
            <ul class="space-y-2">
              {
                footerLinks.solutions.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm hover:text-blue-400 transition-colors">
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>

          <!-- Company Column -->
          <div>
            <h3 class="text-white font-semibold mb-4">
              {footerLinks.company.title}
            </h3>
            <ul class="space-y-2">
              {
                footerLinks.company.links.map((link) => (
                  <li>
                    <a
                      href={link.href}
                      class="text-sm hover:text-blue-400 transition-colors">
                      {link.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-700"></div>

    <!-- Bottom Footer -->
    <div
      class="py-6 flex flex-col items-center md:flex-row md:justify-between gap-4">
      <!-- Copyright -->
      <p class="text-sm text-slate-400">
        Â© {new Date().getFullYear()} CoreLuminate. All rights reserved.
      </p>

      <!-- Legal Links -->
      <div class="flex flex-wrap justify-center gap-6">
        {
          legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </Container>
</footer>
